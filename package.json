{
  "name": "@d-fischer/logger",
  "version": "1.0.2",
  "description": "A simple logger for Node and the browser.",
  "main": "lib",
  "types": "lib",
  "module": "es",
  "exports": {
    ".": {
      "require": "./lib/index.js",
      "import": "./es/index.mjs"
    }
  },
  "sideEffects": false,
  "repository": "github:d-fischer/logger",
  "author": "Daniel Fischer <daniel@d-fischer.dev>",
  "license": "MIT",
  "dependencies": {
    "detect-node": "^2.0.4",
    "tslib": "^1.10.0"
  },
  "devDependencies": {
    "@d-fischer/eslint-config": "^1.0.3",
    "@types/node": "^13.1.4",
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "ts-hybrid-esm-build": "^0.2.2"
  },
  "files": [
    "LICENSE",
    "README.md",
    "lib",
    "es"
  ],
  "scripts": {
    "lint": "eslint --ext ts src",
    "prettier:check": "prettier --check 'src/**'",
    "prettier:fix": "prettier --write 'src/**'",
    "build": "ts-hybrid-esm-build",
    "rebuild": "ts-hybrid-esm-build --clean"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,ts}": [
      "eslint --fix",
      "git add"
    ]
  }
}
