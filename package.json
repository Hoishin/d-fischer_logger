{
  "name": "@d-fischer/logger",
  "version": "2.1.0",
  "description": "A simple logger for Node and the browser.",
  "main": "lib",
  "types": "lib",
  "exports": {
    ".": {
      "require": "./lib/index.js",
      "import": "./es/index.mjs"
    }
  },
  "sideEffects": false,
  "repository": "github:d-fischer/logger",
  "author": "Daniel Fischer <daniel@d-fischer.dev>",
  "license": "MIT",
  "dependencies": {
    "detect-node": "^2.0.4",
    "tslib": "^2.0.3"
  },
  "devDependencies": {
    "@d-fischer/eslint-config": "^2.0.6",
    "@types/node": "^14.11.2",
    "eslint": "^7.10.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "tsukuru": "^0.6.0",
    "typescript": "~4.0.3"
  },
  "files": [
    "LICENSE",
    "README.md",
    "lib",
    "es"
  ],
  "scripts": {
    "lint": "eslint --ext ts src",
    "prettier:check": "prettier --check 'src/**'",
    "prettier:fix": "prettier --write 'src/**'",
    "build": "tsukuru",
    "rebuild": "tsukuru --clean"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,css,json,md}": "prettier --write",
    "*.{js,ts}": "eslint --fix"
  }
}
